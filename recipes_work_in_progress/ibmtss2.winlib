 ./configure --prefix=$INSTALLPREFIX --build=$BUILDPLATFORM --host=$RUNPLATFORM --enable-shared --enable-static CFLAGS="-DTPM_WINDOWS" LDFLAGS="-Wl,--as-needed -lws2_32" &&
