+if(MSVC OR MINGW)
        set_target_properties(\${LOVE_LIB_NAME} PROPERTIES RELEASE_OUTPUT_NAME "love" PDB_NAME "liblove" IMPORT_PREFIX "lib")
@@ -1757,3 +1757,3 @@

