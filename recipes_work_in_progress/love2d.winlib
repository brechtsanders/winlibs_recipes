# fix CMakeLists.txt
patch -ulbf CMakeLists.txt << EOF
@@ -38,3 +38,3 @@

-if(MSVC)
+if(MSVC OR MINGW)
        set(LOVE_CONSOLE_EXE_NAME lovec)
@@ -1383,3 +1383,3 @@

