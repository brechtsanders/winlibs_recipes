export NAME="RHIDE"
export STATUS=
export URL=http://www.rhide.com/
export BASENAME=rhide
export DESCRIPTION="RHIDE - an IDE for DJGPP and other GNU based systems"
export CATEGORY=development
export TYPE=application
export VERSION=1.5
export VERSIONDATE=20180418
