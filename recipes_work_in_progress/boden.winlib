export NAME="boden"
export STATUS=
export URL=https://www.boden.io/
#export URL=https://github.com/AshampooSystems/boden/
export BASENAME=boden
export DESCRIPTION="Purely native C++ cross-platform GUI framework for Android and iOS development."
export CATEGORY=development
export TYPE=library
export VERSION=0.4
export VERSIONDATE=20251014
wl-showstatus --package-version
export DEPENDENCIES=
export OPTIONALDEPENDENCIES=
export BUILDDEPENDENCIES=cmake,ninja
export OPTIONALBUILDDEPENDENCIES=
export LICENSEFILE=LICENSE.md
export LICENSETYPE=GPL/LGPL
export DOWNLOADURL="https://github.com/AshampooSystems/boden/releases"
export INSTALLPREFIX=`pwd`/inst_$BASENAME-$VERSION
export DOWNLOADSOURCEURL=https://github.com/AshampooSystems/boden/releases/download/v$VERSION/v$VERSION.tar.gz
wl-showstatus download
wl-download -v -d $TARBALLDIR/$BASENAME $DOWNLOADSOURCEURL
wl-wait4deps
wl-showstatus extract
mkdir -p $BASENAME-$VERSION
tar xz --force-local -f $TARBALLDIR/$BASENAME/v$VERSION.tar.gz -C$BASENAME-$VERSION
cd $BASENAME-$VERSION/boden
# fix undefined std::bind in framework/foundation/include/bdn/DispatchQueue.h
sed -i.bak -e "1i #include <functional>" framework/foundation/include/bdn/DispatchQueue.h
# fix undefined std::runtime_error in framework/foundation/include/bdn/GlobalStack.h
sed -i.bak -e "1i #include <stdexcept>" framework/foundation/include/bdn/GlobalStack.h
# fix undefined uint8_t in framework/foundation/include/bdn/property/Property.h
sed -i.bak -e "1i #include <cstdint>" framework/foundation/include/bdn/property/Property.h
# fix undefined std::shared_ptr in framework/foundation/include/bdn/Notifier.h
sed -i.bak -e "1i #include <memory>" framework/foundation/include/bdn/Notifier.h
# fix undefined std::invalid_argument in framework/foundation/include/bdn/property/GetterSetterBacking.h
sed -i.bak -e "1i #include <stdexcept>" framework/foundation/include/bdn/property/GetterSetterBacking.h
# fix undefined std::mutex/std::function in framework/foundation/include/bdn/log.h
sed -i.bak -e "1i #include <mutex>\n#include <functional>\n#include <functional>" framework/foundation/include/bdn/log.h
# fix undefined std::unique_ptr in framework/foundation/include/bdn/platform/Hooks.h
sed -i.bak -e "1i #include <memory>" framework/foundation/include/bdn/platform/Hooks.h

