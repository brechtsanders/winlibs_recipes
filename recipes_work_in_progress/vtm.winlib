export NAME="vtm"
export STATUS=
export URL=https://github.com/netxs-group/vtm
export BASENAME=vtm
export DESCRIPTION="Terminal multiplexer with window manager and session sharing "
export CATEGORY=gui
export TYPE=library
#export VERSION=0.9.9g
#export VERSIONDATE=20230506
export VERSION=0.9.9h
export VERSIONDATE=20230508
wl-showstatus --package-version
export DEPENDENCIES=
export OPTIONALDEPENDENCIES=
export BUILDDEPENDENCIES=cmake,ninja
export OPTIONALBUILDDEPENDENCIES=
export LICENSEFILE=LICENSE
export LICENSETYPE=MIT
export DOWNLOADURL="https://github.com/netxs-group/vtm/releases"
export INSTALLPREFIX=`pwd`/inst_$BASENAME-$VERSION
export DOWNLOADSOURCEURL=https://github.com/netxs-group/vtm/archive/refs/tags/v$VERSION.tar.gz
wl-showstatus download
wl-download -v -d $TARBALLDIR/$BASENAME $DOWNLOADSOURCEURL
wl-wait4deps
wl-showstatus extract
tar xz --force-local -f $TARBALLDIR/$BASENAME/v$VERSION.tar.gz
cd $BASENAME-$VERSION

