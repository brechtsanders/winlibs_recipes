export BASENAME=clutter-box2d
export DESCRIPTION=""
export CATEGORY=
export TYPE=library
export VERSION=0.10.0
export VERSIONDATE=20110207
wl-showstatus --package-version
#export DEPENDENCIES=gobject-introspection
