export NAME="librep"
export STATUS=
#export URL=http://librep.sourceforge.net/
#export URL=https://github.com/SawfishWM/librep
export URL=https://sawfish.fandom.com/wiki/Librep
export BASENAME=librep
export DESCRIPTION="librep is a shared library implementing a Lisp dialect that is lightweight, reasonably fast, and highly extensible. It contains an interpreter, byte-code compiler and virtual machine. Applications may use the interpreter as an extension language, or it may be used for standalone scripts."
export CATEGORY=development
export TYPE=library
#export VERSION=0.16.1
#export VERSIONDATE=20101008
export VERSION=0.92.7
export VERSIONDATE=20251101
wl-showstatus --package-version
export DEPENDENCIES=gdbm
export OPTIONALDEPENDENCIES=
export BUILDDEPENDENCIES=
export OPTIONALBUILDDEPENDENCIES=
export LICENSEFILE=COPYING
export LICENSETYPE=GPL
#export DOWNLOADURL="http://ftp.gnome.org/pub/GNOME/sources/librep/"
export DOWNLOADURL="https://github.com/SawfishWM/librep/tags"
export INSTALLPREFIX=`pwd`/inst_$BASENAME-$VERSION
#export DOWNLOADSOURCEURL=http://ftp.gnome.org/pub/gnome/sources/$BASENAME/`echo $VERSION|sed 's/^\([0-9]*\.[0-9]*\)\..*$/\1/'`/$BASENAME-$VERSION.tar.bz2
export DOWNLOADSOURCEURL=https://github.com/SawfishWM/librep/archive/refs/tags/$BASENAME-$VERSION.tar.gz
wl-showstatus download
wl-download -v -d $TARBALLDIR/$BASENAME $DOWNLOADSOURCEURL
wl-wait4deps
#tar xj --force-local -f $TARBALLDIR/$BASENAME/$BASENAME-$VERSION.tar.bz2
tar xz --force-local -f $TARBALLDIR/$BASENAME/$BASENAME-$VERSION.tar.gz
#cd $BASENAME-$VERSION
cd librep-librep-$VERSION
wl-showstatus preconfigure &&
 mkdir -p m4 &&
 autoreconf -f -i -I m4 -I $MINGWPREFIX/share/aclocal &&
 wl-showstatus configure &&
 #./configure --prefix=$INSTALLPREFIX --build=$BUILDPLATFORM --host=$RUNPLATFORM --enable-static --enable-shared LDFLAGS="-no-undefined -Wl,-no-undefined" &&
 ./configure --prefix=$INSTALLPREFIX --build=$BUILDPLATFORM --host=$RUNPLATFORM --with-value-type=intptr_t --with-gmp-prefix=$MINGWPREFIX --with-gdbm-prefix=$MINGWPREFIX --with-readline --with-ffi &&
 wl-showstatus build-install &&
 make install &&
    echo OK
