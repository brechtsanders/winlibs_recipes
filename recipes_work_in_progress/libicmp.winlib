export NAME="libicmp"
export STATUS=
export URL=https://github.com/troglobit/libicmp
export BASENAME=libicmp
export DESCRIPTION="Very simple library for sending and receiving ICMP datagrams."
export CATEGORY=network
export TYPE=library
export VERSION=1.0
export VERSIONDATE=20170203
wl-showstatus --package-version
export DEPENDANCIES=
