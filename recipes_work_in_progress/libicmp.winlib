export DOWNLOADSOURCEURL=https://github.com/troglobit/libicmp/releases/download/v$VERSION/$BASENAME-$VERSION.tar.xz
wl-showstatus download
wl-download -v -d $TARBALLDIR/$BASENAME $DOWNLOADSOURCEURL
wl-wait4deps
wl-showstatus extract
tar xfJ $TARBALLDIR/$BASENAME/$BASENAME-$VERSION.tar.xz
cd $BASENAME-$VERSION
patch -ulbf icmp.h << EOF
--- icmp.h  2016-11-19 20:36:39.000000000 +0100
+++ icmp.h  2017-02-03 20:07:42.450877600 +0100
@@ -21,2 +21,7 @@

+#ifdef _WIN32
+#include <stdint.h>
+#include <winsock2.h>
+#include <wspiapi.h>
+#else
 #include <netdb.h>
@@ -25,2 +30,3 @@
 #include <netinet/ip_icmp.h>
+#endif

EOF
