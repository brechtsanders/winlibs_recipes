patch -ulbf std.h << EOF
@@ -3,3 +3,8 @@

+#ifdef __MINGW32__
+#define CYGWIN_VERSION_API_MINOR 90
+#define CYGWIN_VERSION_DLL_MAJOR 1007
+#else
 #include <cygwin/version.h>
+#endif

@@ -44,3 +49,5 @@
