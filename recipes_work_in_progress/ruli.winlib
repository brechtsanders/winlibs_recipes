export DOWNLOADSOURCEURL=http://download.savannah.nongnu.org/releases/ruli/ruli_$VERSION.orig.tar.gz
wl-showstatus download
wl-download -v -d $TARBALLDIR/$BASENAME $DOWNLOADSOURCEURL
wl-wait4deps
wl-showstatus extract
tar xfz $TARBALLDIR/$BASENAME/ruli_$VERSION.orig.tar.gz
cd $BASENAME-$VERSION
mkdir -p winfix/sys winfix/netinet winfix/arpa
echo "#include <winsock2.h>" > winfix/sys/socket.h
echo "#include <ws2tcpip.h>" > winfix/arpa/inet.h
touch winfix/netinet/in.h winfix/netdb.h
wl-showstatus build &&
