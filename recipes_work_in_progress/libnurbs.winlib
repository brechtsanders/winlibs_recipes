export DOWNLOADSOURCEURL=http://downloads.sourceforge.net/project/libnurbs/nurbs%2B%2B/$VERSION/nurbs%2B%2B-$VERSION.tar.bz2
wl-showstatus download
wl-download -v -d $TARBALLDIR/$BASENAME $DOWNLOADSOURCEURL
wl-wait4deps
