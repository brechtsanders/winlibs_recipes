export NAME="Clozure Common Lisp"
export STATUS=
export URL=https://ccl.clozure.com/
export BASENAME=ccl
export DESCRIPTION="Clozure CL (often called CCL for short) is a free Common Lisp implementation with a long history. Some distinguishing features of the implementation include fast compilation speed, native threads, a precise, generational, compacting garbage collector, and a convenient foreign-function interface."
export CATEGORY=development
export TYPE=application
export VERSION=1.11
export VERSIONDATE=20170602
wl-showstatus --package-version
export DEPENDANCIES=
