# fix redefinition of gettimeofday in main/Helper.h (version >= 2025.1)
patch -ulbf main/Helper.h << EOF
@@ -131,3 +131,3 @@

-#if defined WIN32
+#if defined WIN32 && !defined __MINGW32__
        int gettimeofday(timeval * tp, void * tzp);
EOF
