export DOWNLOADSOURCEURL=https://invisible-mirror.net/archives/lynx/tarballs/lynx$(echo $VERSION|sed -e "s/^\([0-9]*\.[0-9]*\.[0-9]*\)\.\([0-9]*\)/\1rel.\2/").tar.bz2
