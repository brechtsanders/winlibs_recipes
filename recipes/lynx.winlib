wl-download -v -d $TARBALLDIR/$BASENAME $DOWNLOADSOURCEURL
wl-wait4deps
wl-showstatus extract
tar xj --force-local -f $TARBALLDIR/$BASENAME/lynx$(echo $VERSION|sed -e "s/^\([0-9]*\.[0-9]*\.[0-9]*\)\.\([0-9]*\)/\1rel.\2/").tar.bz2
