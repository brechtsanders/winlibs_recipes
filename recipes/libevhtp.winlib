# fix missing strndup in sslutils.c (version >= 1.2.16)
mv sslutils.c sslutils.c.bak
cat > sslutils.c << EOF
#include <stdlib.h>
#include <string.h>
char* strndup (const char *str, size_t maxlen)
{
  int l = strnlen(str, maxlen);
  char* s = (char*)malloc(l + 1);
  memcpy(s, str, l);
  s[l] = 0;
  return s;
}
EOF
