echo "#include <windows.h>" > clutter-gtk/gtk-clutter-embed.c
echo "#include <X11/Xlib.h>" >> clutter-gtk/gtk-clutter-embed.c
cat clutter-gtk/gtk-clutter-embed.c.bak >> clutter-gtk/gtk-clutter-embed.c
