#echo "#undef __STRICT_ANSI__" > cxxmph/mph_bits.cc &&
#cat cxxmph/mph_bits.cc.bak >> cxxmph/mph_bits.cc
#mv cxxmph/mph_index.cc cxxmph/mph_index.cc.bak &&
