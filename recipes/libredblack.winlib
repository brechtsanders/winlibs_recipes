export NAME="libredblack"
export STATUS=
export URL=http://libredblack.sourceforge.net/
export BASENAME=libredblack
export DESCRIPTION="A library to provide the RedBlack balanced tree searching and sorting algorithm. The algorithm was taken from the book \"Introduction to Algorithms\" by Cormen, Leiserson & Rivest."
export CATEGORY=dataprocessing
export TYPE=library
export VERSION=1.3
export VERSIONDATE=20151213
wl-showstatus --package-version
export DEPENDANCIES=
export OPTIONALDEPENDANCIES=
export BUILDDEPENDANCIES=
export LICENSEFILE=COPYING
export LICENSETYPE=LGPL
export DOWNLOADURL="http://sourceforge.net/projects/libredblack/files/libredblack/"
export INSTALLPREFIX=`pwd`/inst_$BASENAME-$VERSION
export DOWNLOADSOURCEURL=http://downloads.sourceforge.net/project/libredblack/libredblack/$VERSION/$BASENAME-$VERSION.tar.gz
wl-showstatus download
wl-download -v -d $TARBALLDIR/$BASENAME $DOWNLOADSOURCEURL
wl-wait4deps
wl-showstatus extract
tar xfz $TARBALLDIR/$BASENAME/$BASENAME-$VERSION.tar.gz
cd $BASENAME-$VERSION
wl-showstatus configure &&
./configure --prefix=$INSTALLPREFIX --build=$BUILDPLATFORM --host=$RUNPLATFORM &&
 # fix building DLLs
 mv libtool libtool.bak &&
 sed -e "s/\(allow_undefined=\)yes/\1no/; s/-Wl,-e,_DllMainCRTStartup@12/-mdll/" libtool.bak > libtool &&
 wl-showstatus build-install &&
 make -j1 install-strip &&
 mkdir -p $INSTALLPREFIX/bin &&
 mv -f $INSTALLPREFIX/lib/*.dll $INSTALLPREFIX/bin/ &&
 mv $INSTALLPREFIX/lib/libredblack.la $INSTALLPREFIX/lib/libredblack.la.bak &&
 cp -u .libs/libredblack.dll.a $INSTALLPREFIX/lib/ &&
 #sed -e "s?\(library_names='\)\(libredblack\)?\1$INSTALLPREFIX/bin/\2?" $INSTALLPREFIX/lib/libredblack.la.bak > $INSTALLPREFIX/lib/libredblack.la &&
 #sed -e "s/\(library_names='\)\(libredblack\)/\1..\/bin\/\2/" $INSTALLPREFIX/lib/libredblack.la.bak > $INSTALLPREFIX/lib/libredblack.la &&
 sed -e "s/\(dlname='\)\(libredblack\)/\1..\/bin\/\2/; s/\(library_names='\).*redblack.*dll\('\)/\1libredblack.dll.a\2/" $INSTALLPREFIX/lib/libredblack.la.bak > $INSTALLPREFIX/lib/libredblack.la &&
 rm -f $INSTALLPREFIX/lib/libredblack.la.bak &&
 wl-makepackage -c -d && wl-install -d $BASENAME-$VERSION && cd .. && wl-showstatus cleanup && rm -rf $BASENAME-$VERSION



