# fix missing stpcpy (version >= 4.15.2)
for F in $(grep -l stpcpy $(find -name '*.c')); do
mv $F $F.bak
cat > $F << EOF
inline char* stpcpy (char *dest, const char *src)
{
  register char *d = dest;
  register const char *s = src;
  do
    *d++ = *s;
  while (*s++);
  return (d - 1);
}
EOF
cat $F.bak >> $F
done
