export NAME="ioquake3"
export STATUS=
export URL=https://ioquake3.org/
#export URL=https://github.com/ioquake/ioq3
export BASENAME=ioquake3
export DESCRIPTION="The ioquake3 community effort to continue supporting/developing id's Quake III Arena"
export CATEGORY=games
export TYPE=application
export VERSION=master
export VERSIONDATE=20210104
wl-showstatus --package-version
export DEPENDENCIES=sdl2,libcurl,libjpeg,zlib,libopus,opusfile,libvorbis
export OPTIONALDEPENDENCIES=
export BUILDDEPENDENCIES=
export OPTIONALBUILDDEPENDENCIES=
export LICENSEFILE=COPYING.txt
export LICENSETYPE=GPL
export DOWNLOADURL="https://github.com/ioquake/ioq3/releases ioq3-"
export INSTALLPREFIX=`pwd`/inst_$BASENAME-$VERSION
export DOWNLOADSOURCEURL=https://github.com/ioquake/ioq3/archive/$VERSION.tar.gz
wl-showstatus download
wl-download -v -d $TARBALLDIR/$BASENAME $DOWNLOADSOURCEURL
wl-wait4deps
wl-showstatus extract
tar xz --force-local -f $TARBALLDIR/$BASENAME/$VERSION.tar.gz
cd ioq3-$VERSION
# fix code/sys/sys_win32.c
patch -ulbf code/sys/sys_win32.c << EOF
@@ -99,3 +99,3 @@
        TCHAR szPath[MAX_PATH];
-       FARPROC qSHGetFolderPath;
+       HRESULT (*qSHGetFolderPath)(HWND, int, HANDLE, DWORD, LPSTR);
        HMODULE shfolder = LoadLibrary("shfolder.dll");
@@ -110,3 +110,3 @@
        {
-               qSHGetFolderPath = GetProcAddress(shfolder, "SHGetFolderPathA");
+               qSHGetFolderPath = (void*)GetProcAddress(shfolder, "SHGetFolderPathA");
                if(qSHGetFolderPath == NULL)
EOF
# fix already defined constexpr in code/tools/lcc/src/c.h (version >= master)
patch -ulbf code/tools/lcc/src/c.h << EOF
@@ -647,2 +647,4 @@

+#undef constexpr
+#define constexpr IOQ3_constexpr
 extern Tree constexpr(int);
EOF
wl-showstatus build-install &&
 make copyfiles COMPILE_ARCH=$(if ( echo $RUNPLATFORM | grep -q x86_64 ); then echo "x86_64"; else echo "x86"; fi) CROSS_COMPILING=0 GENERATE_DEPENDENCIES=0 USE_INTERNAL_LIBS=0 COPYDIR=$INSTALLPREFIX/ioquake3 < /dev/null &&
 wl-makepackage -c -d && wl-install -d $BASENAME-$VERSION && cd .. && wl-showstatus cleanup && rm -rf ioq3-$VERSION
####$MINGWPREFIX/ioquake3/ioquake3.x86_64.exe
####$MINGWPREFIX/ioquake3/ioq3ded.x86_64.exe



