#sed -i.bak2 -e "s/atkmm-[0-9].[0-9]*/$(basename $(ls -1 $MINGWPREFIX/lib/pkgconfig/atkmm-[0-9].*.pc|sort -r)|sed -e "s/\.pc$//")/" configure
