export DOWNLOADSOURCEURL=https://downloads.sourceforge.net/project/niftilib/nifticlib/nifticlib_$(echo $VERSION| tr . _)/$BASENAME-$VERSION.tar.gz
wl-showstatus download
wl-download -v -d $TARBALLDIR/$BASENAME $DOWNLOADSOURCEURL
