export BASENAME=nifticlib
export DESCRIPTION="Niftilib is a set of i/o libraries for reading and writing files in the nifti-1 data format. nifti-1 is a binary file format for storing medical image data, e.g. magnetic resonance image (MRI) and functional MRI (fMRI) brain images."
export CATEGORY=graphics,fileformat
export TYPE=library
export VERSION=2.0.0
export VERSIONDATE=20170510
wl-showstatus --package-version
export DEPENDENCIES=zlib
