wl-showstatus configure &&
 cmake.exe -Wno-dev -GNinja -DCMAKE_INSTALL_PREFIX:PATH=$INSTALLPREFIX -DCMAKE_BUILD_TYPE:STRING=Release -DBUILD_CUDA_LIB:BOOL=ON -DPYTHON_EXECUTABLE:PATH=$PYDIR/python.exe -DBUILD_PYTHON_BINDINGS:BOOL=ON -DBUILD_MATLAB_BINDINGS:BOOL=ON -DBUILD_EXAMPLES:BOOL=OFF -DBUILD_TESTS:BOOL=OFF . &&
 wl-showstatus build-install &&
 ninja install/strip &&
 cp -f $INSTALLPREFIX/lib/libflann_s.a $INSTALLPREFIX/lib/libflann.a &&
