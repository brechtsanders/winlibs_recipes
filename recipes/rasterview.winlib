wl-showstatus download
wl-download -v -d $TARBALLDIR/$BASENAME $DOWNLOADSOURCEURL
wl-wait4deps
wl-showstatus extract
mkdir -p $BASENAME-$VERSION
tar xfz $TARBALLDIR/$BASENAME/$BASENAME-$VERSION.tar.gz -C$BASENAME-$VERSION
cd $BASENAME-$VERSION
patch -ulbf raster.c << EOF
--- raster.c  2017-03-23 02:59:04.000000000 +0100
+++ raster.c  2017-03-24 22:07:22.712826800 +0100
@@ -27,3 +27,17 @@
 #include <errno.h>
+#ifdef _WIN32
+#include <winsock2.h>
+size_t strlcpy (char* dst, const char* src, size_t maxlen)
+{
+  size_t srclen = strlen(src);
+  size_t dstlen = (srclen >= maxlen ? maxlen - 1 : srclen);
+  if (dstlen > 0) {
+    strncpy(dst, src, dstlen + 1);
+    dst[dstlen] = 0;
+  }
+  return srclen;
+}
+#else
 #include <netinet/in.h>
+#endif
 #define DEBUG_printf(x)
EOF
