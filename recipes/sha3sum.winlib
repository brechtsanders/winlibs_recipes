                blksize = (size_t)(attr.st_blksize);
+#endif

@@ -307,4 +309,6 @@
        if (!fstat(fd, &attr)) {
+#ifndef _WIN32
                if (attr.st_blksize > 0)
                        blksize = (size_t)(attr.st_blksize);
+#endif
                if (attr.st_size > 0)
