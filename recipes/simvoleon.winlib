export NAME="SIM Voleon"
export STATUS=
export URL=https://coin3d.github.io/SIMVoleon/html/
#export URL=https://github.com/coin3d/simvoleon
export BASENAME=simvoleon
export DESCRIPTION="A volume rendering library for Coin."
export CATEGORY=3d
export TYPE=library
export VERSION=2.1.0
export VERSIONDATE=20210605
wl-showstatus --package-version
export DEPENDENCIES=expat
export OPTIONALDEPENDENCIES=
export BUILDDEPENDENCIES=cmake,ninja,doxygen
export OPTIONALBUILDDEPENDENCIES=
export LICENSEFILE=COPYING
export LICENSETYPE=BSD
export DOWNLOADURL="https://github.com/coin3d/simvoleon/releases/"
export INSTALLPREFIX=`pwd`/inst_$BASENAME-$VERSION
export DOWNLOADSOURCEURL=https://github.com/coin3d/simvoleon/releases/download/simvoleon-$VERSION/simvoleon-$VERSION-src.tar.gz
wl-showstatus download
wl-download -v -d $TARBALLDIR/$BASENAME $DOWNLOADSOURCEURL
wl-wait4deps
wl-showstatus extract
mkdir -p $BASENAME-$VERSION
tar xfz $TARBALLDIR/$BASENAME/simvoleon-$VERSION-src.tar.gz -C$BASENAME-$VERSION
cd $BASENAME-$VERSION/simvoleon
mkdir -p build_static build_shared &&
 wl-showstatus configure &&
 cmake.exe -Wno-dev -GNinja -DCMAKE_INSTALL_PREFIX:PATH=$INSTALLPREFIX -DCMAKE_BUILD_TYPE:STRING=Release -DBUILD_SHARED_LIBS:BOOL=OFF -DSIMVOLEON_BUILD_SHARED_LIBS:BOOL=ON -DSIMVOLEON_BUILD_DOCUMENTATION:BOOL=OFF -DSIMVOLEON_BUILD_TESTS:BOOL=OFF -S. -Bbuild_static &&
 wl-showstatus configure &&
 cmake.exe -Wno-dev -GNinja -DCMAKE_INSTALL_PREFIX:PATH=$INSTALLPREFIX -DCMAKE_BUILD_TYPE:STRING=Release -DBUILD_SHARED_LIBS:BOOL=ON -DSIMVOLEON_BUILD_SHARED_LIBS:BOOL=OFF -DSIMVOLEON_BUILD_DOCUMENTATION:BOOL=ON -DSIMVOLEON_BUILD_TESTS:BOOL=OFF -S. -Bbuild_shared &&
 wl-showstatus build-install &&
 ninja -Cbuild_static install/strip &&
 wl-showstatus build-install &&
 ninja -Cbuild_shared install/strip &&
 wl-makepackage -c -d && wl-install -d $BASENAME-$VERSION && cd .. && wl-showstatus cleanup && rm -rf $BASENAME-$VERSION



