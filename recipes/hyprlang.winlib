-add_executable(hyprlang_fuzz "tests/fuzz/main.cpp")
-target_link_libraries(hyprlang_fuzz PRIVATE hypr::hyprlang)
-add_test(
-  NAME "Fuzz"
-  WORKING_DIRECTORY \${CMAKE_SOURCE_DIR}/tests
