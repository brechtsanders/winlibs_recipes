# fix undefined M_PI
for F in $(grep -lw M_PI $(find -name '*.[hc]pp')); do
mv $F $F.bak
cat > $F << EOF
#define _USE_MATH_DEFINES 1
#include <math.h>
#ifndef M_PI
#define M_PI 3.14159265358979323846
#endif
EOF
cat $F.bak >> $F
done
