export NAME="mp++"
export STATUS=
export URL=https://bluescarni.github.io/mppp/
export BASENAME=mppp
export DESCRIPTION="mp++ is a C++11/14/17/20 library for multiprecision arithmetic"
export CATEGORY=math,development
export TYPE=library
export VERSION=1.0.2
export VERSIONDATE=20231231
wl-showstatus --package-version
export DEPENDENCIES=fmt,mpc,mpfr
export OPTIONALDEPENDENCIES=
export BUILDDEPENDENCIES=cmake,ninja
export OPTIONALBUILDDEPENDENCIES=
export LICENSEFILE=COPYING
export LICENSETYPE=MPL
export DOWNLOADURL="https://github.com/bluescarni/mppp/releases"
export INSTALLPREFIX=`pwd`/inst_$BASENAME-$VERSION
export DOWNLOADSOURCEURL=https://github.com/bluescarni/mppp/archive/refs/tags/v$VERSION.tar.gz
wl-showstatus download
wl-download -v -d $TARBALLDIR/$BASENAME $DOWNLOADSOURCEURL
wl-wait4deps
wl-showstatus extract
tar xz --force-local -f $TARBALLDIR/$BASENAME/v$VERSION.tar.gz
cd $BASENAME-$VERSION
mkdir -p build_static build_shared &&
 wl-showstatus configure &&
 cmake.exe -Wno-dev -GNinja -DCMAKE_INSTALL_PREFIX:PATH=$INSTALLPREFIX -DCMAKE_BUILD_TYPE:STRING=Release -DBUILD_SHARED_LIBS:BOOL=OFF -DMPPP_BUILD_STATIC_LIBRARY:BOOL=ON -DMPPP_WITH_FMT:BOOL=ON -DMPPP_WITH_MPC:BOOL=ON -DMPPP_WITH_MPFR:BOOL=ON -DMPPP_WITH_QUADMATH:BOOL=ON -DMPPP_BUILD_BENCHMARKS:BOOL=OFF -DMPPP_BUILD_TESTS:BOOL=OFF -S. -Bbuild_static &&
 #-DMPPP_WITH_ARB:BOOL=ON 
 wl-showstatus configure &&
 cmake.exe -Wno-dev -GNinja -DCMAKE_INSTALL_PREFIX:PATH=$INSTALLPREFIX -DCMAKE_BUILD_TYPE:STRING=Release -DBUILD_SHARED_LIBS:BOOL=ON -DMPPP_BUILD_STATIC_LIBRARY:BOOL=OFF -DMPPP_WITH_FMT:BOOL=ON -DMPPP_WITH_MPC:BOOL=ON -DMPPP_WITH_MPFR:BOOL=ON -DMPPP_WITH_QUADMATH:BOOL=ON -DMPPP_BUILD_BENCHMARKS:BOOL=OFF -DMPPP_BUILD_TESTS:BOOL=OFF -S. -Bbuild_shared &&
 wl-showstatus build-install &&
 ninja -Cbuild_static install/strip &&
 wl-showstatus build-install &&
 ninja -Cbuild_shared install/strip &&
 wl-makepackage -c -d && wl-install -d $BASENAME-$VERSION && cd .. && wl-showstatus cleanup && rm -rf $BASENAME-$VERSION



