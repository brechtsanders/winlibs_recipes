patch -ulbf src/lib/fy-emit.c << EOF
@@ -18,2 +18,5 @@
 #include <ctype.h>
+#ifdef _WIN32
+#include <windows.h>
+#endif

@@ -2107,3 +2110,8 @@
        int left;
+#ifdef _WIN32
+       SYSTEM_INFO sysinfo;
+       #define pagesize sysinfo.dwPageSize
+#else
        int pagesize = 0;
+#endif
        int size;
@@ -2117,3 +2125,7 @@

+#ifdef _WIN32
+               GetSystemInfo(&sysinfo);
+#else
                pagesize = sysconf(_SC_PAGESIZE);
+#endif
                size = state->need + pagesize - 1;
EOF
