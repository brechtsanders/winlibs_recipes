# fix src/lib/fy-input.c (version >= 0.7.1)
patch -ulbf src/lib/fy-input.c << EOF
@@ -21,3 +21,7 @@
 #include <sys/stat.h>
+#ifdef _WIN32
+#include <windows.h>
+#else
 #include <sys/ioctl.h>
+#endif
 #include <errno.h>
@@ -312,2 +316,5 @@
        int rc;
+#ifdef _WIN32
+       SYSTEM_INFO sysinfo;
+#endif

@@ -374,3 +381,8 @@
                /* switch to stream mode */
+#ifdef _WIN32
+               GetSystemInfo(&sysinfo);
+               fyi->chunk = sysinfo.dwPageSize;
+#else
                fyi->chunk = sysconf(_SC_PAGESIZE);
+#endif
                fyi->buffer = malloc(fyi->chunk);
@@ -383,4 +395,10 @@
                fyi->chunk = fyi->cfg.stream.chunk;
-               if (!fyi->chunk)
+               if (!fyi->chunk) {
+#ifdef _WIN32
+                       GetSystemInfo(&sysinfo);
+                       fyi->chunk = sysinfo.dwPageSize;
+#else
                        fyi->chunk = sysconf(_SC_PAGESIZE);
+#endif
+               }
                fyi->buffer = malloc(fyi->chunk);
@@ -401,3 +419,8 @@
        case fyit_callback:
+#ifdef _WIN32
+               GetSystemInfo(&sysinfo);
+               fyi->chunk = sysinfo.dwPageSize;
+#else
                fyi->chunk = sysconf(_SC_PAGESIZE);
+#endif
                fyi->buffer = malloc(fyi->chunk);
EOF
