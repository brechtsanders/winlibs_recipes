export NAME="Glade"
export STATUS=
export URL=https://glade.gnome.org/
export BASENAME=glade3
export DESCRIPTION="Glade is a RAD tool to enable quick & easy development of user interfaces for the GTK toolkit and the GNOME desktop environment."
export CATEGORY=gui
export TYPE=application
export VERSION=3.40.0
export VERSIONDATE=2060122
wl-showstatus --package-version
export DEPENDENCIES=gtk2,libxml2,gettext,pango,cairo,gdk-pixbuf,libbonoboui,glib2,libgnomecanvas,libgnomeui,gobject-introspection
export OPTIONALDEPENDENCIES=
export BUILDDEPENDENCIES=meson,ninja
export OPTIONALBUILDDEPENDENCIES=
export LICENSEFILE=COPYING
export LICENSETYPE="LGPL (some code GPL)"
export DOWNLOADURL="https://gitlab.gnome.org/Archive/glade/-/tags glade-GLADE_"
export INSTALLPREFIX=`pwd`/inst_$BASENAME-$VERSION
export DOWNLOADSOURCEURL=https://gitlab.gnome.org/Archive/glade/-/archive/GLADE_$(echo $VERSION|tr . _)/glade-GLADE_$(echo $VERSION|tr . _).tar.bz2
wl-showstatus download
wl-download -v -d $TARBALLDIR/$BASENAME $DOWNLOADSOURCEURL
wl-wait4deps
tar xj --force-local -f $TARBALLDIR/$BASENAME/glade-GLADE_$(echo $VERSION|tr . _).tar.bz2
cd glade-GLADE_$(echo $VERSION|tr . _)
# also allow building static library
sed -i.bak -e "s/shared_\(library\)/\1/" gladeui/meson.build
mkdir -p build_both &&
 wl-showstatus configure &&
 PYTHONPATH=${PYTHONPATH:+:$PYTHONPATH}:$MINGWPREFIX/lib $PYDIR/python.exe $(which meson.py) --prefix $INSTALLPREFIX --backend ninja --buildtype release --strip --default-library both -Dgladeui=true -Dpython=disabled -Dgjs=disabled -Dwebkit2gtk=disabled -Dintrospection=false -Dman=false -Dgtk_doc=false -Dc_args="$(if ${CC:-gcc} --help -v 2>/dev/null|grep -q "\-Wincompatible-pointer-types" || ${CC:-gcc} --version|grep -q "^clang"; then echo "-Wno-incompatible-pointer-types"; fi)" . build_both &&
 wl-showstatus build-install &&
 PATH=$PYDIR:$PATH PYTHONPATH=$MINGWPREFIX/python/Lib/site-packages${PYTHONPATH:+:$PYTHONPATH} GETTEXTDATADIR=$MINGWPREFIX/share/gettext ninja -Cbuild_both install &&
 wl-makepackage -c -d && wl-install -d $BASENAME-$VERSION && cd .. && wl-showstatus cleanup && rm -rf glade-GLADE_$(echo $VERSION|tr . _)



