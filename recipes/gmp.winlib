@@ -60,3 +60,7 @@
 @DEFN_LONG_LONG_LIMB@
-#define __GMP_LIBGMP_DLL  @LIBGMP_DLL@
+#if defined(DLL_EXPORT) && !defined(STATIC_GMP)
+#define __GMP_LIBGMP_DLL 1
+#else
+#define __GMP_LIBGMP_DLL 0
+#endif
 #endif
@@ -2319,3 +2323,7 @@
 #define __GMP_CC "@CC@"
+#if __GMP_LIBGMP_DLL
 #define __GMP_CFLAGS "@CFLAGS@"
+#else
+#define __GMP_CFLAGS "@CFLAGS@" /*static CFLAGS*/
+#endif

EOF
