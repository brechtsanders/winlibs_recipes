export NAME="rang"
export STATUS=
export URL=https://agauniyal.github.io/rang/
export BASENAME=rang
export DESCRIPTION="A Minimal, Header only Modern C++ library for colors in your terminal"
export CATEGORY=console
export TYPE=library
#export VERSION=2.0
