export NAME="Movit"
export STATUS=
export URL=https://movit.sesse.net/
export BASENAME=movit
export DESCRIPTION="Movit: High-performance, high-quality video filters for the GPU"
export CATEGORY=video,dataprocessing
export TYPE=library
export VERSION=1.7.2
export VERSIONDATE=20251230
wl-showstatus --package-version
export DEPENDENCIES=libpng,libepoxy,eigen,fftw,sdl2,sdl2image,benchmark
export OPTIONALDEPENDENCIES=
export BUILDDEPENDENCIES=
export OPTIONALBUILDDEPENDENCIES=
export LICENSEFILE=README
export LICENSETYPE=GPL
export DOWNLOADURL="https://movit.sesse.net/"
export INSTALLPREFIX=`pwd`/inst_$BASENAME-$VERSION
export DOWNLOADSOURCEURL=https://movit.sesse.net/$BASENAME-$VERSION.tar.gz
wl-showstatus download
wl-download -v -d $TARBALLDIR/$BASENAME $DOWNLOADSOURCEURL
wl-wait4deps
wl-showstatus extract
tar xz --force-local -f $TARBALLDIR/$BASENAME/$BASENAME-$VERSION.tar.gz
cd $BASENAME-$VERSION
# fix undefined ffs in fft_convolution_effect.cpp
sed -i.bak -e "1i #ifdef __MINGW32__\n#define ffs __builtin_ffs\n#endif" fft_convolution_effect.cpp 
# fix missing WinMain in make_bundled_shaders.cpp (version >= 1.7.2)
patch -ulbf make_bundled_shaders.cpp << EOF
@@ -64,2 +64,11 @@
        printf("}  // namespace movit\\n");
+        return 0;
 }
+#ifdef __MINGW32__
+#define byte WIN_byte
+#include <windows.h>
+int APIENTRY WinMain(HINSTANCE hInstance, HINSTANCE hPrevInstance, LPSTR lpCmdLine, int nCmdShow)
+{
+  return main(__argc, __argv);
+}
+#endif
EOF
wl-showstatus configure &&
 ./configure --prefix=$INSTALLPREFIX --build=$BUILDPLATFORM --host=$RUNPLATFORM CXXFLAGS="-fpermissive" &&
 # fix building DLLs
 sed -i.bak -e "s/\(allow_undefined=\)yes/\1no/" libtool &&
 wl-showstatus build-install &&
 make install TESTS= TEST_OBJS= with_demo_app=no with_benchmark=no &&
 strip $INSTALLPREFIX/bin/*.dll &&
 wl-makepackage -c -d && wl-install -d $BASENAME-$VERSION && cd .. && wl-showstatus cleanup && rm -rf $BASENAME-$VERSION



