export NAME="xmlwrapp"
export STATUS=
export URL=https://vslavik.github.io/xmlwrapp/
export BASENAME=xmlwrapp
export DESCRIPTION="xmlwrapp is a modern style C++ library for working with XML data, built atop the venerable libxml2 C library."
export CATEGORY=fileformat
export TYPE=library
export VERSION=0.10.0
export VERSIONDATE=20251206
wl-showstatus --package-version
export DEPENDENCIES=libxml2,libxslt
export OPTIONALDEPENDENCIES=
export BUILDDEPENDENCIES=cmake,ninja
export OPTIONALBUILDDEPENDENCIES=doxygen
export LICENSEFILE=LICENSE
export LICENSETYPE=BSD
export DOWNLOADURL="https://github.com/vslavik/xmlwrapp/releases"
export INSTALLPREFIX=`pwd`/inst_$BASENAME-$VERSION
export DOWNLOADSOURCEURL=https://github.com/vslavik/xmlwrapp/releases/download/v$VERSION/$BASENAME-$VERSION.tar.xz
wl-showstatus download
wl-download -v -d $TARBALLDIR/$BASENAME $DOWNLOADSOURCEURL
wl-wait4deps
wl-showstatus extract
tar xJ --force-local -f $TARBALLDIR/$BASENAME/$BASENAME-$VERSION.tar.xz
cd $BASENAME-$VERSION
mkdir -p build_static build_shared &&
 wl-showstatus configure-static &&
 cmake.exe -Wno-dev -GNinja -DCMAKE_INSTALL_PREFIX:PATH=$INSTALLPREFIX -DCMAKE_BUILD_TYPE:STRING=Release -DBUILD_SHARED_LIBS:BOOL=OFF -DXMLWRAPP_SHARED:BOOL=OFF -DXMLWRAPP_WITH_LIBXSLT:BOOL=ON -DXMLWRAPP_EXAMPLES:BOOL=OFF -DXMLWRAPP_TESTS:BOOL=OFF -DBUILD_TESTING:BOOL=OFF -S. -Bbuild_static &&
 wl-showstatus configure-shared &&
 cmake.exe -Wno-dev -GNinja -DCMAKE_INSTALL_PREFIX:PATH=$INSTALLPREFIX -DCMAKE_BUILD_TYPE:STRING=Release -DBUILD_SHARED_LIBS:BOOL=ON -DXMLWRAPP_SHARED:BOOL=ON -DXMLWRAPP_WITH_LIBXSLT:BOOL=ON -DXMLWRAPP_EXAMPLES:BOOL=OFF -DXMLWRAPP_TESTS:BOOL=OFF -DBUILD_TESTING:BOOL=OFF -S. -Bbuild_shared &&
 wl-showstatus build-install-static &&
 ninja -Cbuild_static install/strip &&
 wl-showstatus build-install-shared &&
 ninja -Cbuild_shared install/strip &&
 wl-makepackage -c -d && wl-install -d $BASENAME-$VERSION && cd .. && wl-showstatus cleanup && rm -rf $BASENAME-$VERSION
####Note: To build new version it may be necessary to uninstall the old version with: wl-uninstall xmlwrapp



