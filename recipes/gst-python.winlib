 make install-strip PYTHONDIR=$INSTALLPREFIX/Lib/site-packages PYEXECDIR=$INSTALLPREFIX/Lib/site-packages pythondir=$INSTALLPREFIX/Lib/site-packages pyexecdir=$INSTALLPREFIX/Lib/site-packages &&
