# fix missing strndup in src/helpers/vcd2fst.c (version >= 3.3.125)
mv src/helpers/vcd2fst.c src/helpers/vcd2fst.c.bak
cat > src/helpers/vcd2fst.c << EOF
#include <malloc.h>
#include <string.h>
char* strndup (const char *str, size_t maxlen)
{
  int l = strnlen(str, maxlen);
  char* s = (char*)malloc(l + 1);
  memcpy(s, str, l);
  s[l] = 0;
  return s;
}
EOF
cat src/helpers/vcd2fst.c.bak >> src/helpers/vcd2fst.c
